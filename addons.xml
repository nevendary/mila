<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
  <addon id="plugin.video.mila" name="MILA - Media Index Library Addon" version="2.0.0" provider-name="nevendary">
    <requires>
      <import addon="xbmc.python" version="3.0.0"/>
      <import addon="script.module.requests" version="2.18.4"/>
      <import addon="script.module.unidecode" version="0.4.16"/>
    </requires>
    <extension point="xbmc.python.pluginsource" library="main.py">
      <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
      <summary>Media Index Library Addon - Organized media browsing and playback</summary>
      <description>Browse and play media files with enhanced organization. Features include API server integration, organized TV shows and movies by letters/seasons, and all original playback features.</description>
      <platform>all</platform>
      <license>AGPL 3.0</license>
      <forum>https://github.com/nevendary/mila</forum>
      <source>https://github.com/nevendary/mila</source>
    </extension>
  </addon>

  <addon id="repository.mila" name="Mila Repository" version="1.0.0" provider-name="nevendary">
    <extension point="xbmc.addon.repository">
      <dir>
        <info compressed="false">https://raw.githubusercontent.com/nevendary/mila/main/addons.xml</info>
        <checksum>https://raw.githubusercontent.com/nevendary/mila/main/addons.xml.md5</checksum>
        <datadir zip="true">https://raw.githubusercontent.com/nevendary/mila/main/</datadir>
      </dir>
    </extension>
    <extension point="xbmc.addon.metadata">
      <summary lang="en">Mila Repository</summary>
      <description lang="en">Repository for Mila Addons</description>
      <platform>all</platform>
      <license>MIT</license>
    </extension>
  </addon>
</addons>
